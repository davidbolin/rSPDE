citHeader("To cite rSPDE in publications use:")

bibentry(bibtype = "Article",
  title        = "The rational {SPDE} approach for {Gaussian} random fields with general smoothness",
  author       = c(person(given = "David",
                          family = "Bolin",
                          email = "davidbolin@gmail.com"),
                   person(given = "Kristin",
                          family = "Kirchner",
                          email = "kristin.kirchner@sam.math.ethz.ch")),
  journal      = "Journal of Computational and Graphical Statistics",
  year         = "2019",
  note         = "In Press",
  textVersion  =
      paste0("David Bolin, Kristin Kirchner (2019), ",
             "The rational SPDE approach for Gaussian random fields with general smoothness ",
             "Journal of Computational and Graphical Statistics, ",
             "In Press")
)